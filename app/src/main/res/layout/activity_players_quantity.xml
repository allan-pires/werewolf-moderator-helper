<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_xxxhdpi"
    tools:context="doistres.werewolf.PlayersQuantityActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_players_quantity"
            android:textSize="64dp"
            android:textColor="#ff000000"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Quantas pessoas vÃ£o jogar?"/>

        <EditText
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/players_quantity"
            android:textColor="#ff84001c"
            android:textSize="48dp"
            android:background="@color/ripple_material_light"
            android:layout_alignBaseline="@+id/text_ok_players_quantity"
            android:layout_alignBottom="@+id/text_ok_players_quantity"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/text_ok_players_quantity"
            android:textSize="48dp"
            android:background="@android:color/transparent"
            android:onClick="goToSelectClassesActivity"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</RelativeLayout>
