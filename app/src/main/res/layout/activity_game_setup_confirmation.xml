<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_xxxhdpi"
    tools:context="doistres.werewolf.GameSetupConfirmationActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Informações da partida"
            android:id="@+id/text_game_info"
            android:textSize="64dp"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_players_quantity"
            android:textColor="#ff000000"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/text_classes_selected"
            android:textColor="#ff000000"
            android:textSize="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximo >"
            android:textColor="#ff000000"
            android:layout_gravity="bottom|right"
            android:textSize="36dp"
            android:layout_marginRight="10dp"
            android:id="@+id/button_goToRandomClass"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="goToRandomClassActivity" />
    </LinearLayout>
</RelativeLayout>
