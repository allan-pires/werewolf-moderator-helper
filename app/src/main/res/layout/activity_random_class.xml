<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_xxxhdpi"
    tools:context="doistres.werewolf.RandomClassActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_class"
        android:textSize="64dp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:text="Qual a sua classe?"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toque aqui"
        android:id="@+id/button_select_class"
        android:textSize="48dp"
        android:background="@android:color/transparent"
        android:onClick="getRandomClass"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/text_player_class"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_random_class"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/button_select_class"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
